<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @poll.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @poll.description %>
</p>

<p>
  <strong>Instant result:</strong>
  <%= @poll.instant_result %>
</p>

<p>
  <strong>Public result:</strong>
  <%= @poll.public_result %>
</p>

<p>
  <strong>Open:</strong>
  <%= @poll.open %>
</p>
<!--
<p>
  <strong>Answer type:</strong>
  <%= @poll.answer_type %>
</p>
-->

<h3> Results </h3>
<table border = "1"><tr>
  <% for i in 0..@answers.size-1 do %>
  <th><%= i %></th>
  <% end %>
</tr><tr>
  <% for i in 0..@answers.size-1 do %>
  <th><%= @answers[i]%></th>
  <% end %>
</tr>
</table>

<% if logged_in? %>
<% if @poll.open %>
<hr>
<h2>Participation Keys</h2>
Please send these participation links to the participants:

<pre>
  <% @participation_urls.each do | url | %>
<%= url %>
  <% end %>
</pre>
<% end %>
<hr/>
<%= link_to 'Edit', edit_poll_path(@poll) %> |
<%= link_to 'Back', polls_path %>

<% end %>
